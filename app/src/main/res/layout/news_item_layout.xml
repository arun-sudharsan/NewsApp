<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <TextView
            tools:text="News Title. SHockinh....oh nooo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvtitle"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" android:layout_marginStart="16dp" android:textSize="14sp"
            android:textStyle="bold" app:layout_constraintEnd_toStartOf="@+id/ivPoster"/>
    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/ivPoster"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"/>
    <TextView
            tools:text="Some description very big sometimes. and also quote small."
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:id="@+id/tvdescription" app:layout_constraintEnd_toStartOf="@+id/ivPoster"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/tvtitle"
            android:layout_marginTop="16dp" app:layout_constraintHorizontal_bias="0.506"
            android:layout_marginStart="16dp" android:layout_marginEnd="16dp"/>
    <TextView
            android:text="today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvTime"
            app:layout_constraintTop_toBottomOf="@+id/ivPoster" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" android:layout_marginEnd="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>